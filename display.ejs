<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation Dashboard | Platefull</title>
    <link rel="stylesheet" href="/styles/display.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

<div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <h2>Platefull</h2>
            <span class="tagline">Dashboard</span>
        </div>
        <nav>
            <ul>
                <li class="active"><i class="fas fa-utensils"></i> Available Donations</li>
                <a href="/logout"><li><i class="fas fa-sign-out-alt"></i> Logout</li></a>
            </ul>
        </nav>
        <div class="sidebar-footer">
            <p>Need help? <a href="#">Contact Support</a></p>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="content">
        <div class="content-header">
            <h1>Available Donations</h1>
            <div class="header-actions">
                <!-- Filter dropdown -->
                <div class="filter-container">
                    <form id="filterForm" method="GET" action="/display">
                        <select name="food_type" onchange="document.getElementById('filterForm').submit()">
                            <option value="" <%= selectedType === "" ? "selected" : "" %>>All Food Types</option>
                            <option value="thali" <%= selectedType === "thali" ? "selected" : "" %>>Thali</option>
                            <option value="rice" <%= selectedType === "rice" ? "selected" : "" %>>Rice</option>
                            <option value="sweets" <%= selectedType === "sweets" ? "selected" : "" %>>Sweets</option>
                            <option value="fruits" <%= selectedType === "fruits" ? "selected" : "" %>>Fruits</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>

        <div class="user-list">
            <% posts.forEach(function(post) { %>
                <div class="user-card">
                    <div class="card-badge">Available</div>
                    <a href="/order/<%= post._id %>" class="order-btn">Order Now</a>
                    <div class="card-image">
                        <img src="https://th.bing.com/th/id/OIP.kAR0YfIVMOtMldlUxErYyQHaEo?rs=1&pid=ImgDetMain" alt="<%= post.food_type %>">
                    </div>
                    <div class="user-details">
                        <h2><%= post.pname %></h2>
                        <div class="details-grid">
                            <div class="detail-item">
                                <i class="fas fa-phone"></i>
                                <p><%= post.pcontact %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <p><%= post.paddress %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-utensils"></i>
                                <p><%= post.food_type %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <p>Serves <%= post.pquantity %> people</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="pagination">
            <a href="#" class="page-link active">1</a>
            <a href="#" class="page-link">2</a>
            <a href="#" class="page-link">3</a>
            <a href="#" class="page-link next"><i class="fas fa-chevron-right"></i></a>
        </div>
    </main>
</div>

</body>
</html>