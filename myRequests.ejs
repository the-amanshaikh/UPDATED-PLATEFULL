<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Requests | Platefull</title>
    <link rel="stylesheet" href="/styles/display.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

<div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <h2>Platefull</h2>
            <span class="tagline">Dashboard</span>
        </div>
        <nav>
            <ul>
                <a href="/Userdisplay"><li><i class="fas fa-home"></i> Home</li></a>
                <li class="active"><i class="fas fa-tasks"></i> My Requests</li>
                <a href="/logout"><li><i class="fas fa-sign-out-alt"></i> Logout</li></a>
            </ul>
        </nav>
        <div class="sidebar-footer">
            <p>Need help? <a href="#">Contact Support</a></p>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="content">
        <div class="content-header">
            <h1>My Food Requests</h1>
        </div>

        <div class="user-list">
            <% if (requests.length === 0) { %>
                <p style="padding: 10px;">You have not requested any food yet.</p>
            <% } else { %>
                <% requests.forEach(function(request) { %>
                <div class="user-card">
                    <div class="card-badge"><%= request.status.toUpperCase() %></div>
                    <div class="card-image">
                        <img src="https://th.bing.com/th/id/OIP.kAR0YfIVMOtMldlUxErYyQHaEo?rs=1&pid=ImgDetMain" alt="Food Image">
                    </div>
                    <div class="user-details">
                        <h2><%= request.post.pname %></h2>
                        <div class="details-grid">
                            <div class="detail-item">
                                <i class="fas fa-phone"></i>
                                <p><%= request.post.pcontact %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <p><%= request.post.paddress %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-utensils"></i>
                                <p><%= request.post.food_type %></p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <p>Serves <%= request.post.pquantity %> people</p>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-check-circle"></i>
                                <p>Status: <%= request.status %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } %>
        </div>
    </main>
</div>

</body>
</html>